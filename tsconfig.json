{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@app/*": ["./app/*"],
			"@styles/*": ["./styles/*"],
			"@components/*": ["./components/*"],
			"@constants/*": ["./constants/*"],
			"@utils/*": ["./utils/*"],
			"@models/*": ["./models/*"],
			"@services/*": ["./services/*"],
			"@providers/*": ["./providers/*"],
			"@hooks/*": ["./hooks/*"],
			"@radix-ui/*": ["./non-existent-folder/*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts"
	],
	"exclude": ["node_modules", "node_modules/@radix-ui/**"]
}
